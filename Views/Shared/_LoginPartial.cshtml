@using Microsoft.AspNetCore.Authentication
@using System.Security.Claims

@if (User.Identity.IsAuthenticated)
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav">
            <li class="nav-item me-2" >
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Edit"><strong>Welcome  @User.Identity.Name!  <i class="fa-regular fa-circle-user fa-lg"></i></strong></a>
            </li>
            <li class="nav-item">
                <button class="btn btn-warning" type="submit"><i class="fa-solid fa-lock"></i> Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item  me-2">
            <a class="btn btn-primary" type="submit" asp-area="" asp-controller="Account" asp-action="Login"><i class="fa-solid fa-unlock"></i> Login</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-secondary" type="submit" asp-area="" asp-controller="Account" asp-action="Register"><i class="fa-solid fa-user-plus"></i> Register</a>
        </li>
    </ul>
}

<style>
    /* Shared styles for both buttons */
    .btn {
        display: inline-block;
        padding: 0.75rem; /* Ensures consistent spacing */
        font-size: 1rem;
        border-radius: 4px;
        text-align: center;
        cursor: pointer;
        min-width: 50px;
        max-width: 50px;
    }

    /* Primary Button */
    .btn-primary {
        background-color: #2c3e50;
        color: #fff;
        border: 2px solid #2c3e50;
    }

        .btn-primary:hover {
            background-color: #34495e;
            border-color: #34495e;
        }

    /* Secondary Button */
    .btn-secondary {
        background-color: #fff;
        color: #2c3e50;
        border: 2px solid #2c3e50;
    }

        .btn-secondary:hover {
            background-color: #f4f4f4;
            border-color: #34495e;
            color: #34495e;
        }
</style>
